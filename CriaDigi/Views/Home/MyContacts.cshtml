<!--não (fiz o consumo) via razor e sim bootstrap-->
<h2>Meus Contatos</h2>

<div>
    <button type="button" id="botaoClick" onclick="ManipulandoIdModal();" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        Novo Contato
    </button>
    <input type="hidden" id="hdnCodigoId" value="0" />
</div>
<table class="table table-striped" id="tblMeusContatoCorpo">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Telefone</th>
            <th scope="col">Data</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    </tbody>

</table>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/Scripts/pages/meus-contatos.js"></script>

<!--woto -> modal construido -->
<div class="modal" id="myModal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <!-- cabeçalho do modal -->
            <div class="modal-header" style="display: flex; justify-content: space-between; ">
                <h4 class="modal-title" style="margin-right:120px">Novo Contato</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- body  -->
            <div class="modal-body">
                <form id="formulario">
                    <div class="form-group">
                        <label for="nome">Nome:</label>
                        <input type="text" class="form-control" id="nome" required>
                    </div>
                    <div class="form-group">
                        <label for="telefone">Telefone:</label>
                        <input type="tel" class="form-control" id="telefone" required>
                    </div>
                </form>
            </div>

            <!--woto-> rodapé -->
            <div class="modal-footer">
                    <button type="button" style="margin-right:120px" id="fecharModal" class="btn btn-secondary" onclick=" LimparForm();" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" onclick="SalvarDadosFamiliar();">Salvar</button>
            </div>
        </div>
    </div>
</div>

